{
	"extends": "eslint:recommended", 
	"env": {
		"node": true,	
		"es6": true
	},
	"globals": {
			"Atomics": "readonly",
			"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"rules": {
		"semi": 2,
		"indent": ["error", 2],
		"no-console": "off",
		"object-curly-spacing": ["error", "never"],
		"no-unused-vars": "warn"
	}
}